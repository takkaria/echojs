{
  "name": "echo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prestart": "npm run sass:watch &",
    "start": "DEBUG=echo:* nodemon ./bin/www",
    "build": "npm run sass",
    "test": "bin/initdb && mocha",
    "coverage": "istanbul cover _mocha",
    "upgrade": "git pull && npm install && bower install && npm run build && npm test",
    "sass:basic": "node-sass --include-path bower_components/ scss -o public/stylesheets",
    "sass:watch": "npm run sass:basic -- -w",
    "sass": "npm run sass:basic",
    "sass_compat": "sass -I bower_components/ scss:public/stylesheets --watch"
  },
  "jshintConfig": {
    "unused": "vars",
    "undef": true,
    "node": true,
    "mocha": true
  },
  "devDependencies": {
    "istanbul": "^0.4.0",
    "mocha": "^2.3.3",
    "node-sass": "^3.3.3"
  },
  "dependencies": {
    "autolinker": "^0.22.0",
    "bcrypt": "^0.8.5",
    "body-parser": "^1.14.1",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "compression": "^1.6.0",
    "cookie-parser": "^1.4.0",
    "debug": "^2.2.0",
    "dotenv": "^1.2.0",
    "express": "^4.13.3",
    "express-flash": "~0.0.2",
    "express-paginate": "~0.0.8",
    "express-session": "^1.11.3",
    "feed-discover": "^1.0.5",
    "feedparser": "^1.1.3",
    "htmlstrip-native": "^0.1.3",
    "ical": "^0.4.0",
    "marked": "~0.3.5",
    "mkdirp": "^0.5.1",
    "moment": "^2.10.6",
    "morgan": "^1.6.1",
    "nodemailer": "^1.5.0",
    "passport": "~0.3.0",
    "passport-local": "^1.0.0",
    "promise": "^7.0.4",
    "request": "^2.64.0",
    "rewire": "^2.5.0",
    "sequelize": "^3.10.0",
    "sequelize-cli": "^1.9.1",
    "serve-favicon": "^2.3.0",
    "session-file-store": "0.0.20",
    "slug": "^0.9.1",
    "sqlite3": "^3.1.0",
    "swig": "^1.4.2",
    "swig-email-templates-2": "^1.4.0",
    "swig-marked": "~0.0.1",
    "winston": "^2.1.0",
    "winston-loggly": "^1.2.0"
  }
}
