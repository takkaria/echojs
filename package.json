{
	"name": "echo",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"prestart": "npm run sass:watch &",
		"start": "DEBUG=echo:* nodemon ./bin/www",
		"test": "mocha",
		"precoverage": "./bin/initdb",
		"coverage": "istanbul cover _mocha",
		"jshint": "jshint *.js lib/*.js models/*.js routes/*.js test/*.js",
		"jscs": "jscs *.js lib/*.js models/*.js routes/*.js test/*.js",
		"deploy": "npm install && bower install && npm run sass:minify",
		"sass:basic": "node-sass --include-path bower_components/ scss -o public/stylesheets",
		"sass:watch": "npm run sass:basic -- -w",
		"sass:minify": "npm run sass:basic -- --output-style compressed",
		"sass": "npm run sass:basic",
		"sass_compat": "sass -I bower_components/ scss:public/stylesheets --watch"
	},
	"jshintConfig": {
		"unused": "vars",
		"undef": true,
		"node": true,
		"mocha": true,
		"esnext": true
	},
	"devDependencies": {
		"chai": "^3.4.1",
		"chai-as-promised": "^5.2.0",
		"istanbul": "^0.4.2",
		"mocha": "^2.3.4",
		"node-sass": "^3.4.2",
		"sequelize-cli": "^2.3.0"
	},
	"dependencies": {
		"autolinker": "^0.22.0",
		"bcrypt": "^0.8.5",
		"body-parser": "^1.14.2",
		"cache-manager": "^1.2.2",
		"compression": "^1.6.0",
		"cookie-parser": "^1.4.1",
		"debug": "^2.2.0",
		"dotenv": "^1.2.0",
		"express": "^4.13.3",
		"express-flash": "~0.0.2",
		"express-paginate": "~0.1.0",
		"express-session": "^1.13.0",
		"feed-discover": "^1.0.5",
		"feedparser": "^1.1.4",
		"ical": "^0.4.0",
		"ical-generator": "^0.2.6",
		"marked": "^0.3.5",
		"mkdirp": "^0.5.1",
		"moment": "^2.11.1",
		"morgan": "^1.6.1",
		"nodemailer": "^2.0.0",
		"passport": "^0.3.2",
		"passport-local": "^1.0.0",
		"promise": "^7.1.1",
		"request": "^2.67.0",
		"rewire": "^2.5.1",
		"sequelize": "^3.17.1",
		"serve-favicon": "^2.3.0",
		"session-file-store": "0.0.24",
		"slug": "^0.9.1",
		"sqlite3": "^3.1.1",
		"striptags": "^2.1.1",
		"swig": "^1.4.2",
		"swig-email-templates": "^2.0.0",
		"swig-marked": "~0.0.1",
		"winston": "^2.1.1",
		"winston-loggly": "^1.2.0"
	}
}
