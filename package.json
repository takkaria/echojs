{
  "name": "echo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prestart": "npm run sass:watch &",
    "start": "DEBUG=echo:* nodemon ./bin/www",
    "pretest": "./bin/initdb",
    "test": "./run_tests.sh",
    "jshint": "jshint *.js lib/*.js models/*.js routes/*.js test/*.js",
    "jscs": "jscs *.js lib/*.js models/*.js routes/*.js test/*.js",
    "deploy": "npm install && bower update && npm run sass:minify",
    "sass:basic": "node-sass --include-path bower_components/ scss -o public/stylesheets",
    "sass:watch": "npm run sass:basic -- -w",
    "sass:minify": "npm run sass:basic -- --output-style compressed",
    "sass": "npm run sass:basic",
    "sass_compat": "sass -I bower_components/ scss:public/stylesheets --watch"
  },
  "jshintConfig": {
    "unused": "vars",
    "undef": true,
    "node": true,
    "mocha": true,
    "esnext": true
  },
  "devDependencies": {
    "bower": "^1.7.7",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "sequelize-cli": "^2.3.1",
    "zombie": "^4.2.1"
  },
  "dependencies": {
    "autolinker": "^0.26.0",
    "bcrypt": "^0.8.5",
    "body-parser": "^1.14.2",
    "cache-manager": "^2.1.2",
    "compression": "^1.6.1",
    "cookie-parser": "^1.4.1",
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "express-flash": "~0.0.2",
    "express-paginate": "~0.2.0",
    "express-session": "^1.13.0",
    "feed-discover": "^1.0.5",
    "feedparser": "^1.1.4",
    "ical": "^0.5.0",
    "ical-generator": "^0.2.7",
    "mkdirp": "^0.5.1",
    "moment": "^2.11.2",
    "morgan": "^1.6.1",
    "nodemailer": "^2.1.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "promise": "^7.1.1",
    "promise-all": "^1.0.0",
    "remarkable": "^1.6.2",
    "request": "^2.69.0",
    "rewire": "^2.5.1",
    "sequelize": "^3.19.2",
    "serve-favicon": "^2.3.0",
    "session-file-store": "0.2.0",
    "slug": "^0.9.1",
    "sqlite3": "^3.1.1",
    "striptags": "^2.1.1",
    "swig": "^1.4.2",
    "swig-email-templates": "^3.0.0",
    "swig-marked": "~0.0.1",
    "swig-remarkable": "0.0.2",
    "twitter": "^1.2.5",
    "winston": "^2.1.1",
    "winston-loggly": "^1.3.1"
  }
}
